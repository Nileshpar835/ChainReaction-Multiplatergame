<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:windowBackground">@color/background_light</item>
    </style>

    <!-- Game title text style -->
    <style name="GameTitle">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Subtitle text style -->
    <style name="GameSubtitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Turn indicator style -->
    <style name="TurnIndicator">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Game button style -->
    <style name="GameButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/purple_500</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Game.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:windowBackground">@color/background_light</item>
    </style>

    <!-- Material Alert Dialog Style -->
    <style name="MaterialAlertDialog_Rounded" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.MaterialComponents.MediumComponent.Rounded</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog_TitleText</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog_BodyText</item>
        <item name="buttonBarPositiveButtonStyle">@style/MaterialAlertDialog_Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialAlertDialog_Button</item>
    </style>

    <style name="ShapeAppearance.MaterialComponents.MediumComponent.Rounded" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="MaterialAlertDialog_TitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MaterialAlertDialog_BodyText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="MaterialAlertDialog_Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RoundedImageViewStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item> <!-- adjust as needed -->
    </style>

    <!-- Custom TextInputLayout style with black border -->
    <style name="BlackBorderTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@android:color/black</item>
        <item name="hintTextColor">@android:color/black</item>
    </style>
</resources>